<h3 class="col-4 offset-1 mt-8 text-white"><i ><%=listing.title %> </i></h3>
    <div class="row mt-3  text-white">
  <div class="col-9 offset-2">
     <div class="card-show">
     <img src="<%= listing.image.url %>" class=" show-img img-fluid mx-auto d-block " alt="...">
        <div class="card-body">
        <p class="card-text ms-2">
        <b></b><br>

         <i>Owned By: <%= listing.owner.username %> </i><br><br>
         v  
        <b>Description :</b> <%= listing.description %><br><br>
         <b> Exhibition Location : </b><%= listing.location %><br><br>
         <b>Country : </b><%= listing.country %><br><br>
      </p>

       <%  if(currUser && currUser._id.equals(listing.owner._id)) { %>

     <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark"> Edit </a><br>
     <br>
     <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark addbtn">Delete</button>
   <% } %>
   </form>
     
  </div>
</div> 
</div>
<br>
 <div class="col-8 offset-2 mt-5 mb-3 card-show">
    <br>
    <hr/>
    <% if(! currUser) { %>
   <p>Login to add review</p>
  <% } %>
   
    <% if(currUser) {  %>
       <h3>Leave a review</h3>
    <form action="/listings/<%= listing._id %>/reviews" 
    method="POST"
    novalidate
    class="needs-validation">
   
   <fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

        <div class="mb-3 mt-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea name="review[comment]" 
              id="comment" cols="30" rows="5"  
              class="form-control" required></textarea>
              <div class="invalid-feedback">Please submit some comments</div>
        </div>
        <br>
        <button class="btn btn-dark ">Submit</button>
        <br>
</form>
<% } %>

  <% if(listing.reviews.length>0) {  %> 
      <div class="row ">
       <p> <b>All reviews</b></p>     

    <% for (review of listing.reviews) { %>
        <div class="card col-8 mb-3 ms-4 ">
              <div class="card-body ms-2 ">
               <p class="card-text"><b><i>Review By:<%= review.author.username %></i></b></p>
              <p class="card-text"><%= review.comment %></p>
              <p class="card-text"><%= review.rating %> stars</p>
              <p class="starability-result" data-rating="<%= review.rating %>">
               Rated: 3 stars
               </p>
          </div>

       <form class="mb-3" method="POST" action="/listings/<%= listing._id%>/reviews/<%= review._id %>?_method=DELETE">
        <button class="btn btn-sm btn-dark mb-3">Delete</button>
       </form>

       </div>
    <% }%>
    </div>
    <% } %>
 </div>
 <div class="col-8 offset-2 mb-3">
      <h3>Where you'll be</h3>
 <div id="map">
 </div>
 </div>
  <script src="/js/map.js"></script>

